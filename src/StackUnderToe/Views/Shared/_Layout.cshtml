                        <li><a href="#">Link</a></li>
                        <li><a href="#">Link</a></li>
                    </ul>
                </div>
            </div>
            <div class="span9">
                <div class="hero-unit">
                    @RenderBody()
                </div>
            </div>
        </div>

        <hr>

        <footer>
            <p>&copy; Company 2012</p>
        </footer>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
